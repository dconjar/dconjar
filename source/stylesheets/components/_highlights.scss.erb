// Import syntax highlighting CSS from Rouge
<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>

.highlight-container {
    overflow-x: auto;
    background: $gray-lighter;
    border-radius: 4px;
    margin: 1em 0;
}

.highlight-language {
    font-weight: bold;
    padding: 4px 0 0 8px;
    display: block;
    font-size: 0.8em;
    color: $gray-light;
    text-transform: uppercase;
}

.highlight {
    font-size: 0.8em;
    border-radius: 0;
    box-sizing: content-box;
    margin: 0;
}