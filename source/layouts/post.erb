<% wrap_layout :one_column do %>
    <article class="hentry">
        <header>
            <h1 class="entry-title heading-primary">
                <%= current_page.title %>
            </h1>
        </header>

        <div class="entry-content">
            <%= yield %>
        </div>

        <%= partial "partials/subscribe-form" %>
        <%= partial "partials/social-sharing-buttons" %>
        <%= partial "partials/read-next" %>
        <%= partial "partials/comments" %>
    </article>
<% end %>