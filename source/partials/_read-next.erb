<% read_next = read_next_helper %>

<div class="panel panel-default panel-read-next">
  <header class="panel-heading">
    <h3 class="panel-title">Read Next</h3>
  </header>
  <div class="list-group">
    <a href="<%= read_next[:url] %>" class="list-group-item panel-item">
      <h4 class="panel-subheading">
        <%= read_next[:title] %>
      </h4>
      <p class="panel-paragraph">
        <%= read_next[:description] %>
      </p>
    </a>
  </div>
</div>