<% article = nil if article.nil? %>

<aside class="social-sharing">

	<h4 class="social-sharing-heading">
		Share This Post
	</h4>

	<div class="social-sharing-buttons">

		<a href="https://twitter.com/intent/tweet?url=<%= permalink_helper(article) %>&text=<%= title_helper(article) %> -&via=dconjar" class="social-sharing-button" target="_blank">
		    <span class="icon icon-social-twitter"></span>
		</a>

		<a href="http://www.linkedin.com/cws/share?url=<%= permalink_helper(article) %>" class="social-sharing-button" target="_blank">
		    <span class="icon icon-social-linkedin"></span>
		</a>

		<a href="https://news.ycombinator.com/submitlink?u=<%= permalink_helper(article) %>&t=<%= title_helper(article) %>" class="social-sharing-button" target="_blank">
		    <span class="icon icon-social-hacker-news"></span>
		</a>

		<a href="https://plus.google.com/share?url=<%= permalink_helper(article) %>" class="social-sharing-button" target="_blank">
		    <span class="icon icon-social-google-plus"></span>
		</a>

		<a href="http://www.facebook.com/sharer.php?u=<%= permalink_helper(article) %>&t=<%= title_helper(article) %>" class="social-sharing-button" target="_blank">
		    <span class="icon icon-social-facebook"></span>
		</a>

		<a href="mailto:?subject=<%= title_helper(article) %>&body=<%= permalink_helper(article) %>" class="social-sharing-button" target="_blank">
		    <span class="icon icon-mail"></span>
		</a>

	</div>

</aside>